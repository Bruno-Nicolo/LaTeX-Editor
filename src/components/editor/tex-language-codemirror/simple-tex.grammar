@top Document { statement+ }

statement {
  SimpleGroup |
  control_sequence |
  text |
  line_comment
}

SimpleGroup {
  "{" statement* "}"
}

control_sequence {
  "\" /([a-zA-Z@]+|[^a-zA-Z@\s])/?
}

text {
  /[^{}\\%]+/+
}

// Tokens (simplified, defined directly)
line_comment { "%" /[^\n]*/ }

@skip { space | line_comment }

space { /\s+/ }
